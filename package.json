{
  "name": "entity-workshop-backend",
  "version": "0.0.1",
  "description": "",
  "author": "Paul Stoia (pauls@istari.vision)",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:local": "npm run copy-local-config & nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "copy-local-config": "run-script-os",
    "copy-local-config:nix": "cp ./config/config.local.yaml ./config/config.yaml",
    "copy-local-config:windows": "copy  .\\config\\config.local.yaml .\\config\\config.yaml"
  },
  "dependencies": {
    "@multiversx/sdk-core": "^12.6.1",
    "@multiversx/sdk-exchange": "^0.2.16",
    "@multiversx/sdk-native-auth-server": "^1.0.7",
    "@multiversx/sdk-wallet": "^4.2.0",
    "@nestjs-modules/mailer": "^1.6.1",
    "@nestjs/cli": "^8.2.0",
    "@nestjs/common": "^8.1.1",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.1.1",
    "@nestjs/event-emitter": "^1.3.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.2.3",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-express": "8.1.1",
    "@nestjs/schematics": "8.0.4",
    "@nestjs/testing": "8.1.1",
    "@nestjs/typeorm": "8.0.2",
    "class-validator": "^0.13.1",
    "mongodb": "^3.7.3",
    "passport": "^0.4.1",
    "passport-custom": "^1.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
